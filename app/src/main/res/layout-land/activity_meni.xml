<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <ImageButton
        android:id="@+id/shopbutton"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:background="@drawable/shopbutton"
        android:layout_marginBottom="10dp"
        />

    <ImageButton
        android:id="@+id/onamabutton"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"

        android:background="@drawable/onamabutton"
        android:layout_marginBottom="10dp"
        android:layout_alignBottom="@+id/shopbutton"

        />
        <ImageButton
            android:id="@+id/instrukcijebutton"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:background="@drawable/instrukcijebutton"
            android:layout_marginBottom="50dp"
            />

    </LinearLayout>

